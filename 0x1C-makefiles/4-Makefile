CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

all: $(OBJ) $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

$(NAME): $(OBJ)
	$(CC) $^ -o $@

clean:
	$(RM)  $(NAME) *~ \#*\# $(OBJ)

oclean:
	$(RM)  $(OBJ)

fclean: oclean clean

re: oclean $(NAME)
